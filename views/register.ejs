<% include ./partials/header %>
    <div class="row text-center justify-content-around">
        <div class="col-xl-4 col-md-5 col-sm-10">
            <h1 class=""><i class="fas fa-campground"></i></h1>
            <h1>Sign Up</h1>
            <form action="/register" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="usernamereg" class="sr-only">Username</label>
                    <input class="form-control" id="usernamereg" type="text" name="username" placeholder="username">
                </div>
                <div class="form-group">
                    <label for="passreg" class="sr-only">Password</label>
                    <input class="form-control" id="passreg" type="password" name="password" placeholder="password">
                </div>
                <div class="form-group">
                    <label for="firstreg" class="sr-only">First name</label>
                    <input class="form-control" id="firstreg" type="text" name="firstName" placeholder="First name">
                </div>
                <div class="form-group">
                    <label for="lastreg" class="sr-only">Last name</label>
                    <input class="form-control" id="lastreg" type="text" name="lastName" placeholder="Last name">
                </div>
                <div class="form-group">
                    <label for="emailreg" class="sr-only">Email address</label>
                    <input class="form-control" id="emailreg" type="email" name="email" placeholder="cristina@gmail.com">
                </div>
                <div class="form-group">
                    <label for="customFile">Avatar</label>
                    <div class="custom-file mb-3">
                        <input type="file" class="custom-file-input" id="customFile" name="avatar" accept="image/*" >
                        <label class="custom-file-label text-truncate" for="customFile">Choose file</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="adminCode" class="sr-only">Admin code</label>
                    <input class="form-control" type="text" name="adminCode" placeholder="Admin code">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Sign Up</button>
                </div>
            </form>
            <small><a href="/campgrounds">Go Back</a></small>
        </div>
    </div>
<% include ./partials/footer %>