<% include ./partials/header %>
    <div id="align" class="row text-center justify-content-around">
        <div class="col-xl-4 col-md-5 col-sm-10">
            <h1 class="display-4"><i class="fas fa-campground"></i></h1>
            <h1 class="mb-3">Login</h1>
            <form action="/login" method="post">
                <div class="form-group">
                    <label for="usernamelog" class="sr-only">Username</label>
                    <input class="form-control" id="usernamelog" type="text" name="username" placeholder="username">
                </div>
                <div class="form-group">
                    <label for="passwordlog" class="sr-only">Password</label>
                    <input class="form-control" id="passwordlog" type="password" name="password" placeholder="password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Login</button>
                </div>
            </form>
            <small class="float-left"><a href="/campgrounds">Go Back</a></small>
            <small class="float-right"><a href="/forgot">Forgot password?</a></small>
        </div>
    </div>
<% include ./partials/footer %>