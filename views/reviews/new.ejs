<% include ../partials/header %>
<div class="row align-review">
    <div class="col-12 mb-3 text-center">
        <h1 class="display-4"><i class="fas fa-campground"></i></h1>
        <h1>New Review: <%= campground.name %></h1>
    </div>
</div>
<form action="/campgrounds/<%= campground._id %>/reviews" method="post">
    <div class="row justify-content-around">
        <div class="col-xl-5 col-lg-6 col-md-8 col-sm-11">
            <div class="form-group">
                <label for="rating">Leave a rating:</label>
                <fieldset class="form-group text-center" id="rating">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="first-rate5" name="review[rating]" value="5" checked/>
                        <label class="form-check-label" for="first-rate5" title="5 stars - Excellent">
                            <%- '<span><i class="fas fa-star checked"></i></span>'.repeat(5) %>
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="first-rate4" name="review[rating]" value="4"/>
                        <label class="form-check-label" for="first-rate4" title="4 stars - Very good">
                            <%- '<span><i class="fas fa-star checked"></i></span>'.repeat(4) %>
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="first-rate3" name="review[rating]" value="3"/>
                        <label class="form-check-label" for="first-rate3" title="3 stars - Average">
                            <%- '<span><i class="fas fa-star checked"></i></span>'.repeat(3) %>
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="first-rate2" name="review[rating]" value="2"/>
                        <label class="form-check-label" for="first-rate2" title="2 stars - Poor">
                            <%- '<span><i class="fas fa-star checked"></i></span>'.repeat(2) %>
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="first-rate1" name="review[rating]" value="1"/>
                        <label class="form-check-label" for="first-rate1" title="1 stars - Terrible">
                            <%- '<span><i class="fas fa-star checked"></i></span>'.repeat(1) %>
                        </label>
                    </div>
                </fieldset>
            </div>
            <div class="form-group">
                <label for="reviewnew" class="sr-only">Review</label>
                <textarea class="form-control" id="reviewnew" name="review[text]" rows="4" 
                    placeholder="Write a review..." aria-label="With textarea"></textarea>
            </div>
        </div>
    </div>
    <div class="row text-center justify-content-around">
        <div class="col-sm-7 col-md-5 col-lg-3">
             <div class="form-group mb-0">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
            <small class="text-center"><a href="/campgrounds/<%= campground._id %>">Go Back</a></small>
        </div>
    </div>
</form>
<% include ../partials/footer %>